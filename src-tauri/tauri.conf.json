{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HyprChat",
  "version": "0.1.2",
  "identifier": "com.hyprchat.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "HYPR-CHAT v0.1",
        "width": 1000,
        "height": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws: wss: https:; img-src 'self' data: https: http: blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/JohnLizana/HyprChat/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": ""
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": "-"
    }
  }
}
